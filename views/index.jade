extends layout

block content
  h1= title
  p Welcome to #{title}
  
  table
    each row in [8,7,6,5,4,3,2,1]
      tr
        each column in [1,2,3,4,5,6,7]
          td(data-row="#{row}" data-column="#{column}")= column

  button.move(data-move="up") up
  button.move(data-move="down") down
  button.move(data-move="left") left
  button.move(data-move="right") right

  .board(data-table="#{board}")



